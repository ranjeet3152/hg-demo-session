<turbo-frame id="form_container">
  <%= form_with model: patient, data: { turbo: true } do |f| %>
      <%= f.label :fullname %>
      <%= f.text_field :fullname %>

      <%= f.label :age %>
      <%= f.number_field :age %>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>

    <%= f.submit "Save" %>
  <% end %>
</turbo-frame>